<!DOCTYPE html>
<html>
  <head>
    <title>Pineapplegram</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div id="home">
        <table>
          <tr>
            <th><h1><%= link_to "PineappleGram", root_path %></h1>
            <th style="padding-left: 850px;"><% if user_signed_in? %><h1 id="edit-profile"><%= link_to "Edit Profile", edit_user_registration_path %><%end%></h1>
          </tr>
          <tr>
            <th><% if user_signed_in? %>
                  <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
                  <%= link_to "New post", new_picture_path %>
                <% else %>
                  <%= link_to "Sign in", new_user_session_path %>
                  <%= link_to "Sign up", new_user_registration_path %>
                <% end %>
            <th style="padding-left: 850px;"><p class="notice"><%= notice %></p>
                                            <p class="alert"><%= alert %></p>
          </tr>
        </table>

        <br><br>
      </div>
    </header>

    <%= yield %>


  </body>
</html>
